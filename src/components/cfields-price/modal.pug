                    li.control--select--list--item(data-value='Терминал')
                        span.control--select--list--item-inner(title='Терминал') Терминал
                    
                    li.control--select--list--item(data-value='Наличные')
                        span.control--select--list--item-inner(title='Наличные') Наличные

                    li.control--select--list--item(data-value='Рассрочка')
                        span.control--select--list--item-inner(title='Рассрочка') Рассрочка
                    
                    li.control--select--list--item(data-value='Кредит')
                        span.control--select--list--item-inner(title='Кредит') Кредит

                    li.control--select--list--item(data-value='Безналичный расчет')
                        span.control--select--list--item-inner(title='Безналичный расчет') Безналичный расчет

