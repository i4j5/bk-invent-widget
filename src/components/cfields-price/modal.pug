                input.control--select--input(type='hidden', id='i4j5-create-payment__type', name='type', value='', data-prev-value='')
        
        .widget_settings_block__item_field(style="margin-bottom: 10px")
            .widget_settings_block__title_field(style="margin-bottom: 5px") Описание:
            .widget_settings_block__input
                textarea(name='description' id='i4j5-create-payment__description').text-input.text-input-textarea.edit-integration-modal__textarea=description
        
        div(style='margin-top: 15px')
            input(type='hidden', name='lead_id', value=lead_id, id="i4j5-create-lead-project__lead_id")
