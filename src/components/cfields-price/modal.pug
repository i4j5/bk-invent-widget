.modal-body__inner.modal-body__inner__success    
    form#i4j5-create-payment__form

        span.modal-body__close
            span.icon.icon-modal-close

        .widget_settings_block__item_field(style="margin-bottom: 10px")
            .widget_settings_block__title_field(style="margin-bottom: 5px") Сумма:
            .widget_settings_block__input
                input(name='location').text-input#i4j5-create-payment__sum


        .widget_settings_block__item_field(style="margin-bottom: 10px")
